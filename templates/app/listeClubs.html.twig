{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<h2 style="text-align:center">Liste des clubs</h2>
<table class="table table-striped table-bordered .col-10">
  <thead>
    <tr>
      <th scope="col">Club</th>
      <th scope="col">Saison</th>
    </tr>
  </thead>
  <tbody>
    <!-- On affiche tous les clubs dans le tableau -->
      {% for club in clubs %}
      <tr>
          <td>{{ club }}</td>
          <td>
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Selectionnez la saison
            </a>
            <!-- SÃ©lecteur de saison -->
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            {% for saison in saisons %}
              <a class="dropdown-item" href="{{ path('clubSaison', {idClub:club.id, idSaison:saison.id}) }}">{{ saison }}</a>
            {% endfor %}
            </div>

          </td>
      </tr>
      {% endfor %}
  </tbody>
</table>

{% endblock %}
